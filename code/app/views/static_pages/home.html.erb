<% if user_signed_in? %>
  <h1>Congratulations! You are now logged in</h1>
  <ul>
    <li>Your email is: <%= current_user.email %></li>
    <li>You created your account at: <%= current_user.created_at %></li>
  </ul>
  <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
<% else %>
  <h1>You don't have any started session</h1>
  <%= link_to 'Login', new_user_session_path %>
<% end %>